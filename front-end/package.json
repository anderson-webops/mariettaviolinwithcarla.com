{
	"name": "front-end",
	"type": "module",
	"private": true,
	"scripts": {
		"build": "rm -rf dist && nuxt generate && rm -rf dist && mkdir -p dist && rsync -a .output/public/ dist/",
		"dev:pwa": "VITE_PLUGIN_PWA=true nuxt dev",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"prepare": "nuxt prepare",
		"preview": "node ./scripts/preview.mjs",
		"serve": "PORT=${PORT:-3000} node ./scripts/preview.mjs --port ${PORT:-3000} -o",
		"start": "npm run serve",
		"start:generate": "npx serve dist",
		"lint": "eslint .",
		"lint-fix": "eslint . --fix",
		"typecheck": "nuxt typecheck",
		"test:e2e": "cypress open",
		"test:unit": "node --test --import tsx test/*.test.ts",
		"up": "taze major -I"
	},
	"dependencies": {
		"@vueuse/core": "^14.1.0",
		"pinia": "^3.0.4",
		"vue": "^3.5.25"
	},
	"devDependencies": {
		"@antfu/eslint-config": "^6.7.1",
		"@iconify-json/carbon": "^1.2.15",
		"@iconify-json/twemoji": "^1.2.4",
		"@nuxt/devtools": "^3.1.1",
		"@nuxt/eslint": "^1.12.1",
		"@nuxtjs/color-mode": "^4.0.0",
		"@pinia/nuxt": "^0.11.3",
		"@unocss/eslint-config": "^66.5.10",
		"@unocss/nuxt": "^66.5.10",
		"@vite-pwa/nuxt": "^1.1.0",
		"@vitejs/plugin-vue": "^6.0.3",
		"@vueuse/nuxt": "^14.1.0",
		"cypress": "^15.7.1",
		"eslint": "^9.39.2",
		"eslint-plugin-format": "^1.1.0",
		"nuxt": "^4.2.2",
		"terser": "^5.44.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.49.0",
		"unocss": "^66.5.10",
		"unplugin": "^2.3.11",
		"vite": "^7.2.7",
		"vue-tsc": "^3.1.8"
	},
	"overrides": {
		"@nuxt/devtools": "^3.1.1",
		"@nuxt/kit": "^4.2.2",
		"nuxt": "^4.2.2",
		"unplugin": "^2.3.11",
		"vite": "^7.2.7"
	}
}
